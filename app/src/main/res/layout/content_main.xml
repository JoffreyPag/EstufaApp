<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.estufa.joffr.estufaapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/tela">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">
            <ProgressBar
                android:id="@+id/carregatopic"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible" />
            <Switch
                android:id="@+id/swmanual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual: "
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                android:visibility="gone"/>
            <Switch
                android:id="@+id/swBomba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:text="Bomba: "
                android:textColor="@android:color/white"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/estBomba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado da bomba"
                android:textSize="16sp"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"
                android:visibility="gone"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <include layout="@layout/card_humidity_content" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/caixafiltro"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/numeros"
                android:text="@string/filter_by"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinDatas"
                    />
                <Spinner
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinAnos"/>
                <Button
                    android:id="@+id/botfiltro"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:text="Configurar fase"
            android:id="@+id/conffase"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
